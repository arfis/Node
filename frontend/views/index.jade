html
	head
		title=title
	link(href='//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css',
 rel='stylesheet')
	script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js")
	script(src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js")
	nav.navbar.navbar-inverse
		div.container-fluid
			div.navbar-header
				a.navbar-brand(href="#") #{title}
			ul.nav.navbar-nav
				li.active
					a(onclick="showPage(this)" href="#") @Home
				li
					a(onclick="showPage(this)" href="#") @MyRestaurants
			
	div.container
		center
			div.jumbotron
				h1 #{title}
				h2 Restaurants you like!
			
		h1 #{message}
		div.form-group
			label(for="restaurant") Restaurant
			input.form-control(type="text", name="restaurant")
				
		button.btn.btn-info.center-block(type="button") Search

script.
	function showPage(link) {
		alert(link)
		//window.location.href = '/who'
	}